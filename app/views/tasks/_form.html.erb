  <%= form_for task do |f| %>
    <%= f.label :title, "Task Title", class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :details, "Task Details", class: 'form-label' %>
    <%= f.text_field :details, class: 'form-control' %>
    <div class="form-check m-3">
      <%= f.label :completed, "Task Complete", class: 'form-check-label'%>
      <%= f.check_box :completed, class: 'form-check-input' %>
    </div>
    <%= f.submit class: 'btn btn-primary mb-3'%>
  <% end %>
